{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-typescript", "airbnb/hooks", "eslint:recommended", "plugin:react/recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json",
    "tsconfigRootDir": "__dirname"
  },
  "plugins": ["react", "@typescript-eslint"],
  "ignorePatterns": ["node_modules/", "dist/", "serviceWorker.ts", ".eslintrc.js", ".prettierrc.js", "webpack.config.js", "config", "jest.config.js"],
  "rules": {
    "quotes": ["error", "double"],
    "@typescript-eslint/quotes": ["error", "double"],
    "max-len": ["error", { "code": 1000 }],
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/comma-dangle": [
      "off",
      {
        "arrays": "always-multiline",
        "exports": "always-multiline",
        "functions": "always-multiline",
        "imports": "always-multiline",
        "objects": "always-multiline"
      }
    ],
    "no-plusplus": 0,
    "import/prefer-default-export": 0,
    "no-underscore-dangle" : "off",
    "object-curly-newline": "off"
  }
}

